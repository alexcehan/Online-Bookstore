<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="265dp"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">

            <ImageView
                android:layout_width="134dp"
                android:layout_height="201dp"
                android:scaleType="centerCrop"
                android:background="@drawable/littlefireseverywhere"
                android:elevation="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Little Fires\nEverywhere"
                android:layout_marginTop="7dp"
                android:lineHeight="21sp"
                android:textSize="16sp"
                android:gravity="top"
                android:fontFamily="@font/play_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celeste Ng"
                android:layout_marginTop="0dp"
                android:lineHeight="17sp"
                android:textSize="12sp"
                android:translationY="-1.09sp"
                android:lineSpacingExtra="2sp"
                android:gravity="top"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#4F4F4F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="265dp"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="201dp"
                android:scaleType="centerCrop"
                android:background="@drawable/alltheprettyhorses"
                android:elevation="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All the Pretty\nHorses"
                android:layout_marginTop="7dp"
                android:lineHeight="21sp"
                android:textSize="16sp"
                android:gravity="top"
                android:fontFamily="@font/play_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cormac McCarthy"
                android:layout_marginTop="0dp"
                android:lineHeight="17sp"
                android:textSize="12sp"
                android:translationY="-1.09sp"
                android:lineSpacingExtra="2sp"
                android:gravity="top"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#4F4F4F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">

            <ImageView
                android:layout_width="134dp"
                android:layout_height="201dp"
                android:scaleType="centerCrop"
                android:background="@drawable/thehandmaidtale"
                android:elevation="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Little Fires\nEverywhere"
                android:layout_marginTop="7dp"
                android:lineHeight="21sp"
                android:textSize="16sp"
                android:gravity="top"
                android:fontFamily="@font/play_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celeste Ng"
                android:layout_marginTop="0dp"
                android:lineHeight="17sp"
                android:textSize="12sp"
                android:translationY="-1.09sp"
                android:lineSpacingExtra="2sp"
                android:gravity="top"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#4F4F4F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            >

            <ImageView
                android:layout_width="124dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/thegreatgatsby"
                android:padding="0dp"
                android:elevation="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Little Fires\nEverywhere"
                android:layout_marginTop="7dp"
                android:lineHeight="21sp"
                android:textSize="16sp"
                android:gravity="top"
                android:fontFamily="@font/play_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celeste Ng"
                android:layout_marginTop="0dp"
                android:lineHeight="17sp"
                android:textSize="12sp"
                android:translationY="-1.09sp"
                android:lineSpacingExtra="2sp"
                android:gravity="top"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#4F4F4F"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/wishlist_books"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="983dp">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="160dp"
            android:id="@+id/book1"
            android:background="@drawable/book1"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="104dp"
            android:layout_height="157dp"
            android:id="@+id/book2"
            android:background="@drawable/book2"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="104dp"
            android:layout_height="138dp"
            android:id="@+id/book3"
            android:background="@drawable/book3"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="104dp"
            android:layout_height="160dp"
            android:id="@+id/book4"
            android:background="@drawable/book4"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="104dp"
            android:layout_height="151dp"
            android:id="@+id/book5"
            android:background="@drawable/book5"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="104dp"
            android:layout_height="157dp"
            android:id="@+id/book6"
            android:background="@drawable/book6"
            android:elevation="10dp"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:flow_wrapMode="chain"
            app:flow_horizontalStyle="spread"
            app:constraint_referenced_ids="book1,book2,book3,book4,book5,book6"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>