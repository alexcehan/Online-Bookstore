                    android:layout_height="138dp"
                    android:id="@+id/book3"
                    android:background="@drawable/book3"
                    android:elevation="10dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="160dp"
